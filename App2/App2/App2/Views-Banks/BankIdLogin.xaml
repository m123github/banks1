<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App2"
             x:Class="App2.BankIdLogin">
    <ContentPage.Content>
        <StackLayout Padding="0">

            <Image   Source="{local:ImageResource App2.images.banklogonew123.png}" Margin="0,0,0,20" Aspect="Fill"  HeightRequest="200"/>
            <!--<Image   Source="bnk.png" Margin="0,0,0,20" Aspect="Fill"  HeightRequest="180"/>-->

            <StackLayout Spacing="1" Padding="20" Margin="0,30,0,0">
                <!-- Place new controls here -->
                <!-- <Label Text="Welcome to Xamarin.Forms!" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" /> -->

                <!-- <Image Source="title_icon.png">
        
      </Image>-->

                
                <StackLayout>
                    <Label Text="Bank ID" />
                    <Entry x:Name="BankId" Keyboard="Numeric" MaxLength="3"/>
                    <Grid HeightRequest="40" WidthRequest="120" HorizontalOptions="Center" Margin="0,30,0,0">
                        <Button Text="Proceed" TextColor="white" BackgroundColor="#006db8" CornerRadius="5" Clicked="NavigateButton_OnClicked_proceed"></Button>
                    </Grid>
                </StackLayout>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>